<%- include('../../partials/header.ejs') %>
    <div id="banner-area" class="banner-area" style="background-image:url(images/banner/banner1.jpg)">
        <div class="banner-text">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="banner-heading">
                            <h1 class="banner-title">Vagas</h1>
                            <nav aria-label="breadcrumb">
                                <ol class="breadcrumb justify-content-center">
                                    <li class="breadcrumb-item"><a href="/">PÃ¡gina Principal</a></li>
                                    <li class="breadcrumb-item"><a href="/vagas">Vagas</a></li>
                                    <li class="breadcrumb-item active" aria-current="page">Todos os Vagas</li>
                                </ol>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <section id="main-container" class="main-container pb-2">
        <div class="container">
            <div class="row">
                <% dbData.vagas.forEach((item, i)=> { %>
                    <div class="col-lg-4 col-md-6 mb-5">
                        <div class="ts-service-box">
                            <div class="ts-service-image-wrapper">
                                <img loading="lazy" class="w-100" src="<%=item.img%>" alt="service-image">
                            </div>
                            <div class="d-flex">
                                <div class="ts-service-box-img">
                                    <img loading="lazy" width="50" height="50" src="<%=item.icon%>" alt="service-icon">
                                </div>
                                <div class="ts-service-info">
                                    <h3 class="service-box-title"><a href="/vagas/<%=item.id%>">
                                            <%=item.titulo%>
                                        </a></h3>
                                    <p>
                                        <%=item.desc%>
                                    </p>
                                    <a class="learn-more d-inline-block" href="/vagas/<%=item.id%>"
                                        aria-label="service-details"><i class="fa fa-caret-right"></i> Ler mais</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <% }); %>
            </div>
        </div>
    </section>
    <%- include('../../partials/footer.ejs') %>
<%- include('../../partials/header.ejs') %>
    <div id="banner-area" class="banner-area"
        style="background-image:url(https://www.oseudinheirovalemais.com.br/wp-content/uploads/2019/12/verao-e-epoca-de-aproveitar-a-energia-solar.png)">
        <div class="banner-text">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="banner-heading">
                            <h1 class="banner-title">
                                <%=product.resumedtitle %>
                            </h1>
                            <nav aria-label="breadcrumb">
                                <ol class="breadcrumb justify-content-center">
                                    <li class="breadcrumb-item"><a href="/">Página Principal</a></li>
                                    <li class="breadcrumb-item"><a href="/projetos">Projetos</a></li>
                                    <li class="breadcrumb-item active" aria-current="page">
                                        <%=product.resumedtitle %>
                                    </li>
                                </ol>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <section id="main-container" class="main-container">
        <div class="container">
            <div class="row">
                <div class="col-lg-8">
                    <div id="page-slider" class="page-slider small-bg">
                        <div class="item">
                            <img loading="lazy" class="img-fluid" src="<%=product.mediaSrc[0]%>" alt="project-image" />
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 mt-5 mt-lg-0">
                    <p style="font-size: 20px;" class="project-info-content">Código: <%=product.code%>
                    </p>
                    <h3 class="column-title mrt-0">
                        <%=product.title%>
                    </h3>
                    <p>
                        <%=product.desc%>
                    </p>
                    <h3 class="column-title mrt-0" style="color:red;">
                        R$<%=product.value%>
                            <p style="display: inline;">Instalação Não Inclusa</p>
                    </h3>
                    <a class="btn btn-primary" href="#" style="width: 100%" data-toggle="modal"
                        data-target="#paymentType">Comprar</a>
                    <br><br>
                    <img class="w-100"
                        src="https://cdn.glitch.global/e3790b73-514c-45b3-a987-85c9a4b7481f/bancos.png?v=1641831867235">
                    <br><br>
                    <b>Composto Por:</b>
                    <p>
                        <%=product.composition%>
                    </p>
                </div>
            </div>
        </div>
    </section>
    <%- include('../../partials/footer.ejs') %>